# NexusGuard NOC Backend Configuration

# Application
APP_NAME="NexusGuard NOC"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development

# Security - CHANGE IN PRODUCTION
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://nocuser:nocpassword@localhost:5432/nexusguard

# Redis
REDIS_URL=redis://localhost:6379/0

# Prometheus
PROMETHEUS_URL=http://localhost:9090

# Grafana
GRAFANA_URL=http://localhost:3001
GRAFANA_API_KEY=

# Ansible
ANSIBLE_PLAYBOOKS_PATH=/opt/nexusguard/ansible/playbooks
ANSIBLE_INVENTORY_PATH=/opt/nexusguard/ansible/inventory
ANSIBLE_ROLES_PATH=/opt/nexusguard/ansible/roles

# Alerting (Optional)
ALERTMANAGER_URL=http://localhost:9093
SLACK_WEBHOOK_URL=
PAGERDUTY_INTEGRATION_KEY=

# CORS
CORS_ORIGINS=["http://localhost:3090","http://localhost:8090"]
